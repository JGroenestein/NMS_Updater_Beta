<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Login Page - Ace Admin</title>

  <meta name="description" content="User login page" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!--basic styles-->

  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'bootstrap-responsive.min' %>
  <%= stylesheet_link_tag 'font-awesome.min' %>

  <!--[if IE 7]>
    <%= stylesheet_link_tag 'font-awesome-ie7.min' %>
  <![endif]-->

  <!--page specific plugin styles-->

  <!--fonts-->

  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300" />

  <!--ace styles-->

  <%= stylesheet_link_tag 'ace.min' %>
  <%= stylesheet_link_tag 'ace-responsive.min' %>

  <!--[if lt IE 9]>
    <%= stylesheet_link_tag 'ace-ie.min' %>
  <![endif]-->
</head>

<body class="login-layout">
<div class="container-fluid" id="main-container">
<div id="main-content">
<div class="row-fluid">
  <div class="span12">
    <div class="login-container">
      <div class="row-fluid">
        <div class="center">
          <h1>
            <i class="icon-cloud blue"></i>
            <span class="white">NMS Updater</span>
            <span class="red">Beta</span>
          </h1>
        </div>
      </div>

      <div class="space-6"></div>

      <div class="row-fluid">
        <div class="position-relative">
          <div id="login-box" class="visible widget-box no-border">
            <div class="widget-body">
              <div class="widget-main">
                <h4 class="header blue lighter bigger">
                  <i class="icon-cloud-download blue"></i>
                  Sign In
                </h4>

                <div class="space-6"></div>
                <% flash.each do |key, value| %>
                  <div class="alert alert-warning">
                    <%= value %>
                  </div>
                <% end %>
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                  <label>
                            <span class="block input-icon input-icon-right">
                              <%= f.text_field :email, :class => "span12", :placeholder => "Email" %>
                              <i class="icon-envelope"></i>
                            </span>
                  </label>
                  <label>
                                    <span class="block input-icon input-icon-right">
                                          <%= f.password_field :password, :class => "span12", :placeholder => "Password" %>
                                      <i class="icon-lock"></i>
                                    </span>
                  </label>
                  <div class="space"></div>
                  <div class="row-fluid">
                    <label class="span8">
                      <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me %><span class="lbl"> Remember Me</span>
                      <% end -%>
                    </label>

                    <%= button_tag(type: 'submit', class: "span4 btn btn-small btn-primary") do %>
                      <i class="icon-key"></i>
                      Login
                    <% end %>
                  </div>
                <% end %>
              </div>
              <!--/widget-main-->
              </div>

            <div class="toolbar clearfix">
              <div>
              </div>

              <div>
                <%= link_to (raw('Create a new user<i class="icon-arrow-right"></i>')), new_user_registration_path, :class => "user-signup-link bigger-125" %>
              </div>
            </div>
            </div><!--/widget-body-->
          </div><!--/login-box-->
        </div><!--/position-relative-->
      </div>
    </div>
  </div><!--/span-->
</div><!--/row-->
</div>
</div><!--/.fluid-container-->

<!--basic scripts-->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">
  window.jQuery || document.write("<script src='assets/js/jquery-1.9.1.min.js'>"+"<"+"/script>");
</script>
</body>
</html>
