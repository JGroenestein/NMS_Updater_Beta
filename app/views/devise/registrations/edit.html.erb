<% provide(:title, 'Edit User') %>
<% provide(:page_header_description, 'Update User Details') %>

<%= content_for :page_specific_stylesheets do %>
  <%= stylesheet_link_tag '' %>
<% end %>

<%= content_for :inline_stylesheets do %>
  <%# ----------------------None---------------------- %>
<% end %>


<%# Page Contend - Start %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>

  <% unless devise_error_messages! == "" %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
      </button>

      <%= devise_error_messages! %>
      <br>
    </div>

  <% end %>

  <div class="control-group">
    <label class="control-label" for="user_skin">Choose Skin</label>
    <div class="controls">
      <%= f.select(:skin, options_for_select([
                                               ['#438EB9', '#438EB9', :'data-class' => "default"],
                                               ['#222A2D', '#222A2D', :'data-class' => "skin-1"],
                                               ['#C6487E', '#C6487E', :'data-class' => "skin-2"],
                                               ['#D0D0D0', '#D0D0D0', :'data-class' => "skin-3"]], @user.skin), {}, {:id => 'skin-colorpicker'}) %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="user_email">Email</label>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="user_username">Username</label>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="hr hidden"></div>

  <div class="control-group">
    <label class="control-label" for="user_password">Password</label>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => "off" %>
      <span class="help-inline">(leave blank if you don't want to change it)</span>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="user_password_confirmation">Password Confirmation</label>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="hr hidden"></div>

  <div class="control-group">
    <label class="control-label" for="user_current_password">Current Password</label>
    <div class="controls">
      <%= f.password_field :current_password %>
      <span class="help-inline">(we need your current password to confirm your changes)</span>
    </div>
  </div>

  <div class="form-actions">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="icon-ok bigger-110"></i>Submit
    <% end %>

    &nbsp; &nbsp; &nbsp;
    <button class="btn" type="reset">
      <i class="icon-undo bigger-110"></i>
      Reset
    </button>
  </div>
<% end %>
<%# Page Contend - End %>

<%= content_for :page_specific_javascripts do %>
  <%= javascript_include_tag '' %>
<% end %>

<% content_for :inline_javascripts do %>
<% end %>
